{
  "description": "Hookify plugin - Call discord",
  "hooks": {
    "Notification": [
      {
        "matcher": "permission_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "sh ${CLAUDE_PLUGIN_ROOT}/scripts/notify.sh '⚠️ Permissão necessária'"
          }
        ]
      },
      {
        "matcher": "idle_prompt",
        "hooks": [
          {
            "type": "command",
            "command": "sh ${CLAUDE_PLUGIN_ROOT}/scripts/notify.sh '⏸️ Claude aguardando'"
          }
        ]
      }
    ],
    "Stop": [
      {
        "hooks": [
          {
            "type": "command",
            "command": "sh ${CLAUDE_PLUGIN_ROOT}/scripts/notify.sh '✅ Task completa - validar'"
          }
        ]
      }
    ]
  }
}
